<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/conversation_list_itme_height"
    android:paddingEnd="25dip"
    android:background="@color/background_color" >

    <ImageView
        android:id="@+id/notification_icon"
        android:src="@drawable/notification_main"
        android:layout_centerVertical="true"
        android:layout_width="56dip"
        android:layout_height="56dip"
        android:layout_marginBottom="16dip"
        android:layout_marginStart="16dip"
        android:layout_marginTop="16dip" />

    <LinearLayout
        android:id="@+id/notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_marginTop="12dip"
        android:layout_marginStart="16dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/conversation_item_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/conversation_item_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/conversation_item_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>