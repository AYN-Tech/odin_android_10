        "vendor/qcom/opensource/commonsys/system/bt/hci/include",
        "vendor/qcom/opensource/commonsys-intf/bluetooth/include",
        "vendor/qcom/opensource/commonsys/system/bt/device/include"
    ],
    srcs: [
        "a2dp_encoding.cc",
        "client_interface.cc",
        "hearing_aid_software_encoding.cc",
