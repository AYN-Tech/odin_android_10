<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_base_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/activity_base_margin" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/type" />

            <Spinner
                android:id="@+id/id_sp_img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array_image_type"
                android:padding="@dimen/activity_base_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/encode" />

            <Spinner
                android:id="@+id/id_sp_img_encode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array_image_encode" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/width" />

            <Spinner
                android:id="@+id/id_sp_img_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array_image_width"
                android:padding="@dimen/activity_base_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/height" />

            <Spinner
                android:id="@+id/id_sp_img_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/array_image_height"
                android:padding="@dimen/activity_base_margin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/max_size" />

        <Spinner
            android:id="@+id/id_sp_img_maxsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/array_image_max_size"
            android:padding="@dimen/activity_base_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/id_btn_config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/activity_base_margin"
        android:text="@string/config" />
    <Button
        android:id="@+id/id_btn_config_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/activity_base_margin"
        android:text="@string/base_values" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_iv_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/id_iv_fullimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@android:color/white" />

</LinearLayout>